<UserControl x:Class="LpgSalesApp.UI.Views.Reports.TransactionListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LpgSalesApp.UI.Converters"
             xmlns:vm="clr-namespace:LpgSalesApp.UI.Views.Reports"
             Background="White"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <Style x:Key="AccentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#266625" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="35" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#266625" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Padding" Value="6" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filter Controls -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10" VerticalAlignment="Center">
            <TextBlock Text="📅 From:" VerticalAlignment="Center" FontWeight="Bold" Margin="0 0 5 0"/>
            <DatePicker SelectedDate="{Binding StartDate}" Width="130" Height="30" Margin="0 0 10 0" FontSize="16"/>

            <TextBlock Text="To:" VerticalAlignment="Center" FontWeight="Bold" Margin="10 0 5 0"/>
            <DatePicker SelectedDate="{Binding EndDate}" Width="130" Height="30" FontSize="16"/>

            <Button Content="🔄 Load"
                    Command="{Binding LoadCommand}"
                    Style="{StaticResource AccentButtonStyle}"
                    Background="#0078D7"
                    Margin="30 0 0 0"/>
            
            <!-- Blue for contrast -->
        </StackPanel>

        <!-- DataGrid for Transactions -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Transactions}"
                  SelectedItem="{Binding SelectedTransaction, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  FontSize="15"
                  RowBackground="#F9F9F9"
                  AlternatingRowBackground="#EFEFEF"
                  GridLinesVisibility="None"
                  BorderBrush="#DDD"
                  BorderThickness="1"
                  Margin="0 10 0 0"
                  RowHeight="35"
                  ColumnHeaderHeight="38"
                  HeadersVisibility="Column">

            <DataGrid.Columns>
                <DataGridTextColumn Header="📆 Date" Binding="{Binding TransactionDate, StringFormat=yyyy-MM-dd}" Width="110"/>
                <DataGridTextColumn Header="🧾 Trans. #" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="👤 Customer" Binding="{Binding CustomerName}" Width="*" />
                <DataGridTextColumn Header="💵 Total" Binding="{Binding TotalAmount, StringFormat='₱{0:N2}'}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- View Details Button -->
        <Button Grid.Row="2"
                Content="🔍 View Details"
                Command="{Binding ViewDetailsCommand}"
                HorizontalAlignment="Right"
                Width="160"
                Height="40"
                Margin="0 20 0 0"
                Style="{StaticResource AccentButtonStyle}"
                Background="#28a745"/>
        <!-- Green for success/details -->
    </Grid>
</UserControl>
