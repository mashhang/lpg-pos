<Window x:Class="LpgSalesApp.UI.Views.Reports.TransactionDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction Details" Height="400" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="🧾 Transaction Details" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>
            <TextBlock Text="{Binding Id, StringFormat='Transaction #: {0}'}" FontSize="16"/>
            <TextBlock Text="{Binding CustomerName, StringFormat='Customer: {0}'}" FontSize="16"/>
            <TextBlock Text="{Binding TransactionDate, StringFormat='Date: {0:yyyy-MM-dd}'}" FontSize="16"/>
            <TextBlock Text="{Binding TotalAmount, StringFormat='Total: ₱{0:N2}'}" FontSize="16" Margin="0 0 0 10"/>

            <TextBlock Text="🧺 Items:" FontSize="16" FontWeight="Bold" Margin="0 10 0 5"/>
            <ListBox ItemsSource="{Binding Items}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="Product ID: {0}, Qty: {1}, ₱{2:N2}">
                                    <Binding Path="ProductId"/>
                                    <Binding Path="Quantity"/>
                                    <Binding Path="Subtotal"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </StackPanel>
    </Grid>
</Window>
