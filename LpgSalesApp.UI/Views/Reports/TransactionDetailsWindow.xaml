<Window x:Class="LpgSalesApp.UI.Views.Reports.TransactionDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction Details"
        Height="520"
        Width="600"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="0 0 0 20">
            <TextBlock Text="🧾 Transaction Details"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#266625"
                       Margin="0 0 0 10" />

            <Border Background="#F4F7F3" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="{Binding CreatedBy, StringFormat='Cashier: {0}'}" FontSize="16" Foreground="#444"/>
                    <TextBlock Text="{Binding Id, StringFormat='Transaction #: {0}'}" FontSize="16" Foreground="#444"/>
                    <TextBlock Text="{Binding CustomerName, StringFormat='Customer: {0}'}" FontSize="16" Foreground="#444"/>
                    <TextBlock Text="{Binding TransactionDate, StringFormat='Date: {0:yyyy-MM-dd}'}" FontSize="16" Foreground="#444"/>
                    <TextBlock Text="{Binding TotalAmount, StringFormat='Total: ₱{0:N2}'}"
                               FontSize="16" FontWeight="SemiBold"
                               Foreground="#266625"
                               Margin="0 5 0 0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Items List -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="🧺 Items"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#266625"
                       Margin="0 0 0 8" />

            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Padding="10">
                <ListBox ItemsSource="{Binding Items}" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0" BorderThickness="0 0 0 1" Padding="6">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="🧃 Product ID: {0}">
                                                <Binding Path="ProductId"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Qty: {0}">
                                                <Binding Path="Quantity"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <TextBlock Foreground="#266625" FontWeight="Bold">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="₱{0:N2}">
                                                <Binding Path="Subtotal"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </StackPanel>
    </Grid>
</Window>
