<UserControl x:Class="LpgSalesApp.UI.Views.Controls.CustomDatePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">

    <Grid>
        <DatePicker SelectedDate="{Binding SelectedDate, ElementName=Root, Mode=TwoWay}"
                    BorderBrush="#D1D5DB"
                    BorderThickness="1"
                    Height="38"
                    FontSize="20"
                    Padding="8 0"
                    Background="White"
                    Foreground="#374151"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center">
            
            <DatePicker.Resources>
                <Style TargetType="Calendar">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Calendar">
                                <Border Background="White" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="4">
                                    <StackPanel>
                                        <CalendarItem x:Name="PART_CalendarItem"
                                                      Background="White"
                                                      BorderThickness="0"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style TargetType="CalendarDayButton">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E5E7EB"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#2563EB"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsToday" Value="True">
                            <Setter Property="BorderBrush" Value="#2563EB"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DatePicker.Resources>
        </DatePicker>
    </Grid>
</UserControl>