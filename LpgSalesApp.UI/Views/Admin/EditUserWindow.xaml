<Window x:Class="LpgSalesApp.UI.Views.Admin.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User"
        Height="360" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#F9FAFB">

    <Border Margin="20" Background="White" CornerRadius="10" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Edit User"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2F4858"
                       Margin="0 0 0 20"/>

            <!-- Form Section -->
            <StackPanel Grid.Row="1">

                <StackPanel>
                    <TextBlock Text="Username" Foreground="#555"/>
                    <TextBox x:Name="UsernameBox" Height="32" FontSize="14"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="New Password (optional)" Foreground="#555"/>
                    <PasswordBox x:Name="PasswordBox" Height="32"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Role" Foreground="#555"/>
                    <ComboBox x:Name="RoleBox" Height="32" FontSize="14">
                        <ComboBoxItem Content="Admin"/>
                        <ComboBoxItem Content="User"/>
                    </ComboBox>
                </StackPanel>

            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 20 0 0"
                        >
                <Button Content="Cancel"
                        Width="90"
                        Height="32"
                        Click="Cancel_Click"
                        Background="White"
                        BorderBrush="#D1D5DB"
                        Foreground="#333"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>

                <Button Content="Save"
                        Width="90"
                        Height="32"
                        Click="Save_Click"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
