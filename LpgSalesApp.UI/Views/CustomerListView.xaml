<UserControl x:Class="LpgSalesApp.UI.Views.CustomerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LpgSalesApp.UI.ViewModels"
             xmlns:local="clr-namespace:LpgSalesApp.UI.Converters"
             Loaded="UserControl_Loaded"
             Background="White">

    <UserControl.Resources>
        <local:NullToBoolConverter x:Key="NullToBoolConverter" />

        <!-- Reusable Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#266625" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Width" Value="110" />
            <Setter Property="Height" Value="35" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="16" />
        </Style>
    </UserControl.Resources>

    <DockPanel Margin="20">
        <!-- Header Buttons -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 15">
            <Button Content="🔄 Refresh" Style="{StaticResource ModernButtonStyle}" Command="{Binding RefreshCommand}" />
            <Button Content="➕ Add" Style="{StaticResource ModernButtonStyle}" Command="{Binding AddCommand}" />
            <Button Content="✏️ Edit" Style="{StaticResource ModernButtonStyle}"
                    Command="{Binding EditCommand}"
                    IsEnabled="{Binding SelectedCustomer, Converter={StaticResource NullToBoolConverter}}" />
            <Button Content="🗑 Delete" Style="{StaticResource ModernButtonStyle}"
                    Command="{Binding DeleteCommand}"
                    Background="White" Foreground="#266625" BorderBrush="#266625" BorderThickness="2"
                    IsEnabled="{Binding SelectedCustomer, Converter={StaticResource NullToBoolConverter}}" />
        </StackPanel>

        <!-- Data Grid -->
        <DataGrid ItemsSource="{Binding Customers}"
                  SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  Background="White"
                  RowBackground="#F7F7F7"
                  AlternatingRowBackground="#EEEEEE"
                  BorderThickness="1"
                  BorderBrush="#DDD"
                  Margin="0"
                  FontSize="16"
                  RowHeight="35"
                  Foreground="#333"
                  >
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#266625" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontWeight" Value="Medium" />
                    <Setter Property="Padding" Value="5" />
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="30" />
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="250" />
                <DataGridTextColumn Header="Contact" Binding="{Binding ContactNumber}" Width="130" />
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
