<Window x:Class="LpgSalesApp.UI.Views.Auth.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="335" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="🛠️ LPG POS Login" FontSize="20" FontWeight="Bold" Margin="0 0 0 20" />

        <!-- Form Inputs -->
        <StackPanel Grid.Row="1" Margin="0 20 0 0">
            <TextBlock Text="👤 Username" FontWeight="SemiBold" Margin="0 5 0 0"/>
            <TextBox Text="{Binding Username}" Margin="0 5 0 10" />

            <TextBlock Text="🔒 Password" FontWeight="SemiBold" Margin="0 5 0 0"/>
            <PasswordBox Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" Margin="0 5 0 10" />
        </StackPanel>

        <!-- Login Button -->
        <Button Grid.Row="2" Content="🔐 Login" Width="120" Height="35"
                HorizontalAlignment="Right" Margin="0 10 0 0"
                Command="{Binding LoginCommand}" />
    </Grid>
</Window>
