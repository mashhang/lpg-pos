<Window x:Class="LpgSalesApp.UI.Windows.CustomerFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Customer" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Full Name:" Grid.Row="0" Margin="0 5"/>
        <TextBox Grid.Row="0" Margin="80 5 0 5" Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Contact Number:" Grid.Row="1" Margin="0 5"/>
        <TextBox Grid.Row="1" Margin="110 5 0 5" Text="{Binding ContactNumber, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Address:" Grid.Row="2" Margin="0 5"/>
        <TextBox Grid.Row="2" Margin="80 5 0 5" Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" />

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
            <Button Content="Save" Width="80" Margin="5 0" Command="{Binding SaveCommand}" />
            <Button Content="Cancel" Width="80" Margin="5 0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
