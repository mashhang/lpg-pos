<Window x:Class="LpgSalesApp.UI.Windows.CustomerFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Customer"
        Height="430"
        Width="550"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="30 30 30 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="30"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Full Name -->
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <!-- Contact Number -->
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <!-- Address -->
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="📝 Add New Customer"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#266625"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 10" />

        <!-- Full Name -->
        <TextBlock Grid.Row="2" Text="Full Name" FontWeight="SemiBold" Margin="0 20"/>
        <TextBox Grid.Row="2"
                 Margin="120 5 0 5"
                 FontSize="30"
                 BorderBrush="#266625"
                 BorderThickness="1"
                 Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" />

        <!-- Contact Number -->
        <TextBlock Grid.Row="4" Text="Contact Number" FontWeight="SemiBold" Margin="0 20"/>
        <TextBox Grid.Row="4"
                 Margin="120 5 0 5"
                 FontSize="30"
                 BorderBrush="#266625"
                 BorderThickness="1"
                 Text="{Binding ContactNumber, UpdateSourceTrigger=PropertyChanged}" />

        <!-- Address -->
        <TextBlock Grid.Row="6" Text="Address" FontWeight="SemiBold" Margin="0 20"/>
        <TextBox Grid.Row="6"
                 Margin="120 5 0 5"
                 FontSize="30"
                 BorderBrush="#266625"
                 BorderThickness="1"
                 Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" />

        <!-- Buttons -->
        <StackPanel Grid.Row="8"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 10 0 0">
            <Button Content="💾 Save"
                    Width="100"
                    Height="40"
                    Margin="0 0 10 0"
                    Background="#266625"
                    Foreground="White"
                    FontWeight="Bold"
                    Command="{Binding SaveCommand}" />
            <Button Content="❌ Cancel"
                    Width="100"
                    Height="40"
                    Background="White"
                    Foreground="#266625"
                    BorderBrush="#266625"
                    BorderThickness="2"
                    FontWeight="Bold"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
