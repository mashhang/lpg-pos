<Window x:Class="LpgSalesApp.UI.Windows.ProductFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LpgSalesApp.UI.Windows"
        mc:Ignorable="d"
        Title="Product Form" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Name:" Grid.Row="0" Margin="0 5"/>
        <TextBox Grid.Row="0" Margin="80 5 0 5" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Price:" Grid.Row="1" Margin="0 5"/>
        <TextBox Grid.Row="1" Margin="110 5 0 5" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Stock:" Grid.Row="2" Margin="0 5"/>
        <TextBox Grid.Row="2" Margin="80 5 0 5" Text="{Binding Stock, UpdateSourceTrigger=PropertyChanged}" />

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
            <Button Content="Save" Width="80" Margin="5 0" Command="{Binding SaveCommand}" />
            <Button Content="Cancel" Width="80" Margin="5 0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
