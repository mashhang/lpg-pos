<Window x:Class="LpgSalesApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:LpgSalesApp.UI.Views"
        xmlns:reports="clr-namespace:LpgSalesApp.UI.Views.Reports"
        Title="LPG POS" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Background="White" ResizeMode="NoResize">

    <TabControl>
        <TabItem Header="🛒 Products">
            <views:ProductListView />
        </TabItem>

        <TabItem Header="👥 Customers">
            <views:CustomerListView />
        </TabItem>

        <TabItem Header="💰 Transactions">
            <views:TransactionListView />
        </TabItem>

        <TabItem Header="📜 History">
            <reports:TransactionListView />
        </TabItem>
    </TabControl>
</Window>
